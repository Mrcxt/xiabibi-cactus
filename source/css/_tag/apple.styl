
// apple标签
.apple
    position relative;
    border-radius: 7px;
    box-shadow: 0px 3px 20px 0.5px rgba(0,0,0,0.19);
    background-color: #383737;
    color: #fff;
    padding: 48px 1.5em 1.5em 1.5em;
    br:nth-child(1)
        display: none
    a
        color: #fff;

.apple:before
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 48px;
    background-color: #f8f8f8;
    border-radius: 7px;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;     

.apple .btn
    position absolute;
    top: 24px;
    left: 3em;
    width: 1em;
    height 1em;
    margin-top: -0.5em;
    border-radius: 50%;
    background-color: #fc615d;
    cursor: pointer;
    
    &:before
        content: "";
        position absolute;
        top: 0;
        left: -1.5em;
        width: 1em;
        height 1em;
        border-radius: 50%;
        background-color: #fdbc40;
        cursor: pointer;
    &:after
        content: "";
        position absolute;
        top: 0;
        right: -1.5em;
        width: 1em;
        height 1em;
        border-radius: 50%;
        background-color: #34c84a;
        cursor: pointer;
